{
  "packages": [
    "nodejs@23.9",
    "go@1.24",
    "clickhouse@latest",
    "sqlite@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Logchef development environment initialized'",
      "echo 'Available commands:'"
    ],
    "scripts": {
      "start-backend": "cd $PWD && go run ./cmd/logchef/main.go",
      "start-frontend": "cd $PWD/frontend && npm run dev",
      "setup-frontend": "cd $PWD/frontend && npm install",
      "test-backend": "cd $PWD && go test ./...",
      "build": "cd $PWD && go build ./cmd/logchef/main.go && cd $PWD/frontend && npm run build"
    }
  }
}