  <script>
    document.querySelectorAll('.code-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.code-tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        const id = tab.dataset.tab;
        document.getElementById('code-docker').style.display = id === 'docker' ? 'block' : 'none';
        document.getElementById('code-binary').style.display = id === 'binary' ? 'block' : 'none';
      });
    });

    document.querySelector('.copy-btn').addEventListener('click', function() {
      const active = document.querySelector('.code-tab.active').dataset.tab;
      const code = document.getElementById(`code-${active}`).textContent;
      navigator.clipboard.writeText(code);
      this.textContent = 'Copied!';
      setTimeout(() => this.textContent = 'Copy', 2000);
    });

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('visible'); });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
  </script>
