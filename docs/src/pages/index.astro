---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="LogChef — Log Explorer for ClickHouse" activeNav="home">
  <style>
    main { max-width: 1200px; margin: 0 auto; }

    .hero {
      position: relative;
      min-height: 85vh;
      display: flex;
      align-items: center;
      padding: 7rem 1.5rem 5rem;
      overflow: hidden;
    }
    .hero::before {
      content: "";
      position: absolute;
      inset: -20% -10% auto;
      height: 70%;
      background:
        radial-gradient(circle at 20% 20%, color-mix(in srgb, var(--color-accent) 15%, transparent), transparent 60%),
        radial-gradient(circle at 80% 10%, color-mix(in srgb, var(--color-purple) 18%, transparent), transparent 55%);
      opacity: 0.7;
      pointer-events: none;
    }
    .hero-inner {
      max-width: 1280px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: minmax(0, 0.85fr) minmax(0, 1.15fr);
      gap: clamp(2rem, 6vw, 5rem);
      align-items: center;
      position: relative;
      z-index: 1;
    }
    .hero-copy { text-align: left; }
    .hero-title {
      font-size: clamp(2.25rem, 4.6vw, 3.4rem);
      line-height: 1.1;
      letter-spacing: -0.03em;
      font-weight: 600;
      margin-bottom: 1.25rem;
    }
    .badge {
      display: inline-flex; align-items: center; gap: 0.5rem;
      font-family: var(--font-mono); font-size: 0.75rem; color: var(--color-accent);
      background: color-mix(in srgb, var(--color-accent) 10%, transparent);
      border: 1px solid color-mix(in srgb, var(--color-accent) 20%, transparent);
      padding: 0.375rem 0.75rem; border-radius: 100px;
      margin-bottom: 1.5rem;
    }
    .hero-logo {
      margin-bottom: 1.25rem;
    }
    .hero-logo img {
      width: clamp(220px, 40vw, 340px);
      height: auto;
    }
    .hero-desc {
      font-size: 1.1rem; color: var(--color-text-secondary);
      max-width: 520px; margin-bottom: 2rem; line-height: 1.7;
    }
    .hero-actions { display: flex; flex-wrap: wrap; justify-content: flex-start; align-items: center; gap: 0.75rem; }
    .hero-highlights {
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      color: var(--color-text-dim);
      font-size: 0.78rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }
    .hero-highlights span {
      border: 1px solid var(--color-border);
      padding: 0.25rem 0.6rem;
      border-radius: 999px;
      background: color-mix(in srgb, var(--color-bg) 70%, transparent);
    }
    .hero-visual {
      position: relative;
      justify-self: start;
      width: min(1320px, 80vw);
      margin-right: calc(50% - 50vw);
    }
    .hero-glow {
      position: absolute;
      inset: -20%;
      background: radial-gradient(circle at 40% 50%, color-mix(in srgb, var(--color-accent) 18%, transparent), transparent 65%);
      filter: blur(40px);
      opacity: 0.7;
      pointer-events: none;
      z-index: 0;
    }
    .hero-screenshot {
      position: relative;
      aspect-ratio: 16 / 9;
      border-radius: 0;
      overflow: visible;
      border: none;
      background: none;
      box-shadow: none;
      transition: transform 0.35s ease;
    }
    .hero-screenshot:hover {
      transform: translateY(-8px);
    }

    .btn {
      display: inline-flex; align-items: center; gap: 0.5rem;
      font-family: var(--font-sans); font-size: 0.9rem; font-weight: 500;
      padding: 0.75rem 1.5rem; border-radius: 8px;
      border: 1px solid transparent; transition: all 0.15s ease; cursor: pointer;
      text-decoration: none;
    }
    .btn:hover { text-decoration: none; }
    .btn-primary { background: var(--color-accent); color: white; }
    .btn-primary:hover { background: var(--color-accent-hover); }
    .btn-secondary { background: var(--color-surface); color: var(--color-text); border-color: var(--color-border); }
    .btn-secondary:hover { background: var(--color-border); border-color: var(--color-text-dim); }
    .btn svg { width: 18px; height: 18px; }

    .gh-stars { display: flex; align-items: center; }
    .gh-stars img { height: 20px; }

    .features { padding: 5rem 1.5rem; max-width: 1000px; margin: 0 auto; border-top: 1px solid var(--color-border); }
    .section-header { text-align: center; margin-bottom: 3rem; }
    .section-label {
      font-family: var(--font-mono); font-size: 0.75rem; color: var(--color-text-dim);
      text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.75rem;
    }
    .section-title { font-size: 1.75rem; font-weight: 600; letter-spacing: -0.02em; }
    .section-desc {
      margin-top: 0.75rem;
      color: var(--color-text-secondary);
      max-width: 640px;
      margin-left: auto;
      margin-right: auto;
      font-size: 1rem;
    }
    .features-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
    .feature {
      background: var(--color-surface); border: 1px solid var(--color-border);
      border-radius: 12px; padding: 1.75rem;
    }
    .feature-icon {
      width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;
      background: color-mix(in srgb, var(--color-accent) 10%, transparent);
      border-radius: 10px; margin-bottom: 1rem; color: var(--color-accent);
    }
    .feature-icon svg { width: 22px; height: 22px; }
    .feature h3 { font-size: 1.1rem; font-weight: 600; margin-bottom: 0.5rem; letter-spacing: -0.01em; }
    .feature p { color: var(--color-text-secondary); font-size: 0.9375rem; line-height: 1.6; }

    .quickstart { padding: 5rem 1.5rem; max-width: 800px; margin: 0 auto; }
    .quickstart .section-header { text-align: center; }
    .code-block {
      background: var(--color-surface); border: 1px solid var(--color-border);
      border-radius: 12px; overflow: hidden; margin-top: 2rem;
    }
    .code-header {
      display: flex; justify-content: space-between; align-items: center;
      padding: 0.625rem 1rem; border-bottom: 1px solid var(--color-border);
    }
    .code-tabs { display: flex; gap: 0; }
    .code-tab {
      font-family: var(--font-mono); font-size: 0.75rem; color: var(--color-text-dim);
      background: none; border: none; padding: 0.5rem 0.875rem;
      cursor: pointer; transition: color 0.15s ease; border-radius: 6px;
    }
    .code-tab.active { color: var(--color-text); background: var(--color-bg); }
    .code-tab:hover:not(.active) { color: var(--color-text-secondary); }
    .copy-btn {
      font-family: var(--font-mono); font-size: 0.6875rem; color: var(--color-text-dim);
      background: var(--color-bg); border: 1px solid var(--color-border);
      padding: 0.375rem 0.625rem; border-radius: 6px; cursor: pointer; transition: all 0.15s ease;
    }
    .copy-btn:hover { color: var(--color-text); border-color: var(--color-text-dim); }
    .code-content {
      padding: 1.25rem; font-family: var(--font-mono);
      font-size: 0.8125rem; line-height: 1.7; overflow-x: auto;
    }
    .code-content pre { margin: 0; }
    .code-comment { color: var(--color-text-dim); }
    .code-string { color: var(--color-success); }
    .code-keyword { color: var(--color-accent); }

    .integrations { padding: 3rem 1.5rem 5rem; max-width: 1000px; margin: 0 auto; border-top: 1px solid var(--color-border); }
    .integrations-inner { display: flex; justify-content: center; align-items: center; gap: 3rem; flex-wrap: wrap; }
    .integrations-label { font-size: 0.875rem; color: var(--color-text-dim); }
    .integrations-logos { display: flex; align-items: center; gap: 2rem; flex-wrap: wrap; }
    .integrations-logos a {
      display: flex; align-items: center; gap: 0.5rem;
      color: var(--color-text-secondary); font-size: 0.9375rem; font-weight: 500; transition: color 0.15s ease;
    }
    .integrations-logos a:hover { color: var(--color-text); text-decoration: none; }
    .integrations-logos svg { width: 24px; height: 24px; }

    @media (max-width: 960px) {
      .hero { min-height: auto; }
      .hero-inner { grid-template-columns: 1fr; text-align: center; }
      .hero-copy { text-align: center; }
      .hero-actions { justify-content: center; }
      .hero-highlights { justify-content: center; }
      .hero-visual { width: 100%; margin-right: 0; justify-self: center; }
    }

    @media (max-width: 768px) {
      .features-grid { grid-template-columns: 1fr; }
      .integrations-inner { flex-direction: column; gap: 1.5rem; }
    }

    .reveal { opacity: 0; transform: translateY(16px); transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1); }
    .reveal.visible { opacity: 1; transform: translateY(0); }

    /* Screenshot Showcase */
    .showcase {
      position: relative;
      padding: 5rem 1.5rem 6rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .showcase::before {
      content: "";
      position: absolute;
      top: 10%;
      left: -10%;
      right: -10%;
      height: 55%;
      background: radial-gradient(circle at 70% 20%, color-mix(in srgb, var(--color-accent) 12%, transparent), transparent 60%);
      opacity: 0.6;
      pointer-events: none;
      z-index: 0;
    }
    .showcase .section-header {
      position: relative;
      z-index: 1;
      text-align: left;
      max-width: 680px;
      margin-left: 0;
      margin-right: 0;
    }
    .showcase .section-desc {
      margin-left: 0;
      margin-right: 0;
    }

    .theme-img {
      opacity: 0;
      transition: opacity 0.35s ease, transform 0.35s ease;
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: top center;
      border-radius: inherit;
      pointer-events: none;
    }
    .theme-img-light { opacity: 1; pointer-events: auto; }
    :root[data-theme='dark'] .theme-img-light { opacity: 0; }
    :root[data-theme='dark'] .theme-img-dark { opacity: 1; pointer-events: auto; }

    .showcase-list {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      gap: clamp(2.75rem, 6vw, 4.5rem);
      margin-top: 3rem;
    }

    .showcase-item {
      display: grid;
      grid-template-columns: minmax(0, 1.25fr) minmax(0, 0.75fr);
      gap: clamp(1.5rem, 4vw, 3rem);
      align-items: center;
    }

    .showcase-item.is-reversed .showcase-media {
      order: 2;
    }

    .showcase-item.is-reversed .showcase-text {
      order: 1;
    }

    .showcase-media {
      position: relative;
      border-radius: 22px;
      overflow: hidden;
      border: 1px solid color-mix(in srgb, var(--color-border) 80%, transparent);
      background: linear-gradient(180deg, color-mix(in srgb, var(--color-bg) 70%, transparent), var(--color-surface));
      box-shadow: 0 30px 80px -60px rgba(0, 0, 0, 0.6);
      transition: transform 0.35s ease, box-shadow 0.35s ease, border-color 0.35s ease;
    }

    .showcase-media:hover {
      transform: translateY(-6px);
      border-color: color-mix(in srgb, var(--color-accent) 30%, var(--color-border));
      box-shadow: 0 40px 90px -60px rgba(0, 0, 0, 0.7);
    }

    .showcase-media .theme-img {
      object-fit: contain;
      object-position: center;
    }

    .showcase-text {
      max-width: 480px;
    }

    .showcase-text h3 {
      font-size: 1.4rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      letter-spacing: -0.01em;
      color: var(--color-text);
    }

    .showcase-text p {
      font-size: 1rem;
      color: var(--color-text-secondary);
      line-height: 1.7;
    }

    @media (max-width: 768px) {
      .showcase-item {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .showcase-item .showcase-media,
      .showcase-item .showcase-text {
        order: initial;
      }

      .showcase-media { border-radius: 16px; }
      .showcase-text { max-width: 100%; }
      .showcase-text h3 { font-size: 1.2rem; }
      .showcase-text p { font-size: 0.95rem; }
    }

    @media (prefers-reduced-motion: reduce) {
      .reveal,
      .showcase-media,
      .theme-img {
        transition: none;
        animation: none;
      }
    }
  </style>

  <section class="hero">
    <div class="hero-inner">
      <div class="hero-copy">
        <div class="badge">
          <span>Open Source</span>
          <span>·</span>
          <span>Single Binary</span>
        </div>
        
        <div class="hero-logo">
          <img src="/logchef-wordmark.svg" alt="LogChef" />
        </div>
        
        <h1 class="hero-title">Log Explorer for ClickHouse</h1>
        
        <p class="hero-desc">
          Query billions of logs in milliseconds. Single binary, no dependencies.
          Point it at your ClickHouse cluster and start exploring.
        </p>

        <div class="hero-actions">
          <a href="/getting-started/quickstart" class="btn btn-primary">
            Get Started
